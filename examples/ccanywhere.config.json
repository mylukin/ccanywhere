{
  "repo": {
    "kind": "github",
    "url": "https://github.com/owner/repo",
    "branch": "main"
  },
  "deployment": "https://deploy.example.com/api/webhook/deploy",
  "notifications": {
    "channels": ["telegram"],
    "telegram": {
      "botToken": "123456789:ABC-DEF1234ghIkl-zyx57W2v1u123ew11",
      "chatId": "-1001234567890"
    }
  },
  "build": {
    "base": "origin/main",
    "lockTimeout": 300,
    "cleanupDays": 7,
    "excludePaths": [".artifacts", "node_modules", "dist"]
  },
  "test": {
    "enabled": false,
    "configFile": "./playwright.config.ts"
  },
  "artifacts": {
    "baseUrl": "https://artifacts.example.com",
    "retentionDays": 7,
    "maxSize": "100MB",
    "storage": {
      "provider": "r2",
      "folder": "diffs",
      "r2": {
        "accountId": "abcd1234567890abcdef1234567890ab",
        "accessKeyId": "abcd1234567890abcdef1234567890ab",
        "secretAccessKey": "abc123def456ghi789jkl012mno345pqr678stu901vwx234yz567",
        "bucket": "my-artifacts-bucket"
      }
    }
  }
}